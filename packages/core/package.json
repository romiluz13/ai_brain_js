  "scripts": {
    "build": "echo 'Building Universal AI Brain 3.0 (JavaScript)...' && cp -r src dist && echo 'Build complete - JavaScript files copied'",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -w -p tsconfig.build.json",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "dev": "tsc -w -p tsconfig.build.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
